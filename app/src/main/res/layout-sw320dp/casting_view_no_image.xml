<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <ScrollView android:id="@+id/scrollid"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/layBottom"
        android:background="@color/submission_info"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:id="@+id/distance_no_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@color/dark_black"
                android:text="@string/distance"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.sdi.castivate.fonts.ProximanovaCondSemiBold
                android:id="@+id/cast_title_no_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/role_desc_no_image_rel"
                android:layout_alignRight="@+id/role_desc_no_image_rel"
                android:layout_marginTop="10px"
                android:gravity="start|center"
                android:maxLines="2"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/cast_title"
                android:textColor="@color/cast_title_color"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/imgReportAbuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fav_icon_select_no_image"
                android:layout_alignEnd="@+id/cast_title_no_image"
                android:padding="5dp"
                android:src="@drawable/abuse_button1" />

            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:id="@+id/cast_type_no_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/paid_status_no_image"
                android:layout_alignBottom="@+id/paid_status_no_image"
                android:layout_alignLeft="@+id/cast_title_no_image"
                android:layout_marginRight="10dp"
                android:text="@string/cast_type"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:id="@+id/paid_status_no_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fav_icon_select_no_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/cast_type_sep_no_image"
                android:text="@string/cast_paid_status"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/cast_type_sep_no_image"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_alignBottom="@+id/cast_type_no_image"
                android:layout_alignTop="@+id/paid_status_no_image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/cast_type_no_image"
                android:background="@drawable/cast_sep"
                android:gravity="center" />

            <View
                android:id="@+id/line_sep"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@+id/paid_status_no_image"
                android:layout_marginTop="10dp"
                android:background="@color/dark_black" />

            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:id="@+id/submission_info_no_image"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/line_sep"
                android:layout_alignLeft="@+id/cast_type_no_image"
                android:layout_alignRight="@+id/line_sep"
                android:layout_alignStart="@+id/age_range"
                android:layout_below="@+id/line_sep"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:autoLink="web|email|phone"
                android:linksClickable="true"
                android:maxLines="2"
                android:text="Submission Info"
                android:textColor="@color/dark_grey_separator"
                android:textSize="16sp" />

            <View
                android:id="@+id/line_sep_three"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@+id/submission_info_no_image"
                android:background="@color/dark_grey_separator" />

            <LinearLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_sep_three"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.sdi.castivate.fonts.ProximaNovaRegular
                        android:id="@+id/age_range_no_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text="Age 40-50"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ethnicity_type_sep"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/cast_sep"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ethnicity_type_sep12"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/cast_sep"
                        android:singleLine="true" />

                    <com.sdi.castivate.fonts.ProximaNovaRegular
                        android:id="@+id/ethnicity_no_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="African American"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ethnicity_type_sep1"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/cast_sep" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ethnicity_type_sep2"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/cast_sep"
                        android:visibility="gone" />

                    <com.sdi.castivate.fonts.ProximaNovaRegular
                        android:id="@+id/gender_no_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="Female"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ethnicity_type_sep21"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/cast_sep" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ethnicity_type_sep22"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/cast_sep"
                        android:visibility="gone" />

                    <com.sdi.castivate.fonts.ProximaNovaRegular
                        android:id="@+id/union_status_no_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="Non-Union"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/line_role_sep"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@+id/lay"
                android:layout_marginTop="5dp"
                android:background="@color/dark_grey_separator" />

            <RelativeLayout
                android:id="@+id/role_desc_no_image_rel"
                android:layout_width="fill_parent"
                android:layout_height="125dp"
                android:layout_alignEnd="@+id/line_role_sep"
                android:layout_alignRight="@+id/line_role_sep"
                android:layout_below="@+id/line_role_sep"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <com.sdi.castivate.fonts.ProximaNovaRegular
                    android:id="@+id/role_desc_no_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:text="@string/role_desc_sample"
                    android:textColor="@color/dark_grey_separator"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/role_desc_no_image" />
            </RelativeLayout>

            <View
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/role_desc_no_image_rel"
                android:layout_marginTop="4dp"
                android:background="@color/red" />

            <LinearLayout
                android:id="@+id/lay_submission_detail_no_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView3"
                android:background="@color/submission_info">

                <com.sdi.castivate.fonts.ProximaNovaRegular
                    android:id="@+id/submission_detail_no_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:isScrollContainer="true"
                    android:maxLines="6"
                    android:text="Send any documents and materials you have via registered mail to PO Box 54160, Pacific Grove, CA 93950."
                    android:textColor="@color/dark_grey_separator"
                    android:textIsSelectable="true"
                    android:textSize="17sp" />
            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_submission_detail_no_image"
                android:background="@color/submission_info" >

            </LinearLayout>-->

            <CheckBox
                android:id="@+id/fav_icon_select_no_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/submission_info_no_image"
                android:layout_below="@+id/cast_title_no_image"
                android:layout_marginRight="10dp"
                android:background="@drawable/fav_selector"
                android:button="@null" />

        </RelativeLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/layBottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <com.sdi.castivate.fonts.ProximaNovaRegular
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/btn_apply"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgTick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/submit_tick"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>