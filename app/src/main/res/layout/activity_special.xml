<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/checkbox_selector"
            android:button="@null" />


        <com.sdi.castivate.fonts.ProximaNovaRegular
            android:layout_width="match_parent"
            android:textColor="@color/dark_black"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Special requiement"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_special"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/front_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"


            >


            <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
                android:id="@+id/horizontal_number_picker2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/dark_black"
                android:textSize="16sp"

                android:text="Front View" />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/side_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
                android:id="@+id/horizontal_number_picker3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="Side View" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/back_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
                android:id="@+id/horizontal_number_picker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="Back View" />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/video_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
                android:id="@+id/horizontal_number_picker5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="Video" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/audio_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
                android:id="@+id/horizontal_number_picker4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="Audio" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
