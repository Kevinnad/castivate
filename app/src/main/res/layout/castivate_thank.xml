<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/top_bar">

                <LinearLayout
                    android:id="@+id/casting_login_back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/back_icon"
                        android:padding="5dp"
                        android:visibility="visible" />

                    <com.sdi.castivate.fonts.ProximaNovaLightTextView
                        android:id="@+id/casting_login_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="@string/back"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:visibility="visible" />


                </LinearLayout>

                <com.sdi.castivate.fonts.RockWell
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="27sp" />

            </RelativeLayout>

            <com.sdi.castivate.fonts.ProximanovaCondRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/thank_you_msg"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CFCFCF" />

            <com.sdi.castivate.fonts.ProximaNovaLightEditText
                android:id="@+id/thanking_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0EEEE"
                android:hint="@string/et_name"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:padding="20dp"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CFCFCF" />

            <com.sdi.castivate.fonts.ProximaNovaLightEditText
                android:id="@+id/thanking_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="@string/et_email"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CFCFCF" />

            <com.sdi.castivate.fonts.ProximaNovaLightEditText
                android:id="@+id/thanking_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0EEEE"
                android:hint="@string/option"
                android:paddingBottom="80dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CFCFCF" />

            <com.sdi.castivate.fonts.ProximaNovaRegularButton
                android:id="@+id/btnChangePass"
                style="@style/btn_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_signin"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/btn_submit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/txt"
                        android:background="#CFCFCF" />

                    <com.sdi.castivate.fonts.RockWell
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="@string/share"
                        android:textColor="@color/dark_black"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/txt"
                        android:background="#CFCFCF" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/socialmedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fb_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fb_icon" />

                    <ImageView
                        android:id="@+id/twitter_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/twitter_icon" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>